<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/spptDurationTxt"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Enter in minutes"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/time1Txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/endText"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:text="End"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <EditText
        android:id="@+id/spptEndDateTxt"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="YYYY/MM/DD"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <TextView
        android:id="@+id/spptdurationText"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_marginTop="184dp"
        android:text="Duration"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <EditText
        android:id="@+id/spptEndTimeTxt"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="HH:MM"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/spptStartDateTxt"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <TextView
        android:id="@+id/sppTitleText"
        android:layout_width="292dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:text="Possible Event Times"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/time1Txt"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:inputType="text"
        android:text="time slot 1"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sppTitleText" />

    <EditText
        android:id="@+id/time2Txt"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="text"
        android:text="time slot 2"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time1Txt" />

    <Button
        android:id="@+id/time2Btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="Schedule event at this time"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time2Txt" />

    <EditText
        android:id="@+id/time3Txt"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="text"
        android:text="time slot 3"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time2Txt" />

    <Button
        android:id="@+id/time3Btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:text="Schedule event at this time"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time3Txt" />

    <Button
        android:id="@+id/time1Btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="Schedule event at this time"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time1Txt" />

    <Button
        android:id="@+id/scheduleEventBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="Schedule event"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time1Txt"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/when2MeetTitle"
        android:layout_width="246dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="       When would you like to meet?         Year/Month/Day             Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sppTitleText" />

    <EditText
        android:id="@+id/spptStartDateTxt"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="YYYY/MM/DD"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <EditText
        android:id="@+id/spptStartTimeTxt"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="HH:MM"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/spptStartDateTxt"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <TextView
        android:id="@+id/startText"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/when2MeetTitle" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="178dp"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:text="Search for times"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spptDurationTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>