<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gaTitle"
        android:layout_width="320dp"
        android:layout_height="71dp"
        android:layout_marginTop="52dp"
        android:text="Group Availability"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/groupSunText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="Sunday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaTitle" />

    <TextView
        android:id="@+id/groupMonText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Monday"
        app:layout_constraintStart_toStartOf="@+id/groupSunText"
        app:layout_constraintTop_toBottomOf="@+id/groupSunText" />

    <TextView
        android:id="@+id/groupTuesText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Tuesday"
        app:layout_constraintStart_toStartOf="@+id/groupMonText"
        app:layout_constraintTop_toBottomOf="@+id/groupMonText" />

    <TextView
        android:id="@+id/groupWedText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Wednesday"
        app:layout_constraintStart_toStartOf="@+id/groupTuesText"
        app:layout_constraintTop_toBottomOf="@+id/groupTuesText" />

    <TextView
        android:id="@+id/groupThurText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Thursday"
        app:layout_constraintStart_toStartOf="@+id/groupWedText"
        app:layout_constraintTop_toBottomOf="@+id/groupWedText" />

    <TextView
        android:id="@+id/groupFriText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Friday"
        app:layout_constraintStart_toStartOf="@+id/groupThurText"
        app:layout_constraintTop_toBottomOf="@+id/groupThurText" />

    <TextView
        android:id="@+id/groupSatText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Saturday"
        app:layout_constraintStart_toStartOf="@+id/groupFriText"
        app:layout_constraintTop_toBottomOf="@+id/groupFriText" />

    <Button
        android:id="@+id/gpBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gpEventBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Schedule Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupSatText"
        app:layout_constraintVertical_bias="0.357" />

    <EditText
        android:id="@+id/gpSunTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupSunText"
        app:layout_constraintTop_toTopOf="@+id/groupSunText" />

    <EditText
        android:id="@+id/gpMonTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupMonText"
        app:layout_constraintTop_toTopOf="@+id/groupMonText" />

    <EditText
        android:id="@+id/gpTuesTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupTuesText"
        app:layout_constraintTop_toTopOf="@+id/groupTuesText" />

    <EditText
        android:id="@+id/gpWedTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupWedText"
        app:layout_constraintTop_toTopOf="@+id/groupWedText" />

    <EditText
        android:id="@+id/gpThurTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupThurText"
        app:layout_constraintTop_toTopOf="@+id/groupThurText" />

    <EditText
        android:id="@+id/gpFriTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupFriText"
        app:layout_constraintTop_toTopOf="@+id/groupFriText" />

    <EditText
        android:id="@+id/gpSatTimeTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toEndOf="@+id/groupSatText"
        app:layout_constraintTop_toTopOf="@+id/groupSatText" />

    <Button
        android:id="@+id/gpAvailableBtn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:text="Update Availability"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpEventBtn"
        app:layout_constraintVertical_bias="0.129" />

    <EditText
        android:id="@+id/durationTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="None"
        app:layout_constraintStart_toStartOf="@+id/gpSatTimeTxt"
        app:layout_constraintTop_toTopOf="@+id/durationText" />

    <TextView
        android:id="@+id/durationText"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Event Duration"
        app:layout_constraintStart_toStartOf="@+id/groupSatText"
        app:layout_constraintTop_toBottomOf="@+id/groupSatText" />
</androidx.constraintlayout.widget.ConstraintLayout>