<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/groupNameText"
        android:layout_width="111dp"
        android:layout_height="26dp"
        android:text="Group Name"
        app:layout_constraintBottom_toTopOf="@+id/groupNameInput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/groupDescriptionInput"
        android:layout_width="410dp"
        android:layout_height="51dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="Enter a description of the group"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classCreationText" />

    <TextView
        android:id="@+id/classCreationText"
        android:layout_width="186dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="112dp"
        android:text="Group Creation"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/groupNameInput"
        android:layout_width="410dp"
        android:layout_height="51dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Enter the name of the group"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classCreationText" />

    <TextView
        android:id="@+id/groupDescriptionText"
        android:layout_width="135dp"
        android:layout_height="23dp"
        android:text="Group Description"
        app:layout_constraintBottom_toTopOf="@+id/groupDescriptionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupNameText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="413dp"
        android:layout_height="66dp"
        android:layout_marginTop="112dp"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupDescriptionInput" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>